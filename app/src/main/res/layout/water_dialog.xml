<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/dialog_bg"
    android:padding="28dp"
    android:minWidth="320dp">

    <ImageView
        android:id="@+id/waterIcon"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:src="@drawable/water_icon"
        android:tint="#4A90E2"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/progressText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Water Intake Progress: 0%"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="#E0E0E0"
        android:fontFamily="sans-serif-medium"
        app:layout_constraintTop_toBottomOf="@id/waterIcon"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="0dp"
        android:layout_height="24dp"
        android:layout_marginTop="16dp"
        android:progressDrawable="@drawable/thick_progress_bar"
        app:layout_constraintTop_toBottomOf="@id/progressText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <View
        android:id="@+id/divider1"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginTop="24dp"
        android:background="#333333"
        app:layout_constraintTop_toBottomOf="@id/progressBar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <LinearLayout
        android:id="@+id/statsContainer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:orientation="horizontal"
        android:weightSum="2"
        app:layout_constraintTop_toBottomOf="@id/divider1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Water Consumed Section -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingEnd="12dp">

            <TextView
                android:id="@+id/drunkText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Water Consumed"
                android:textSize="14sp"
                android:textColor="#B0B0B0"
                android:fontFamily="sans-serif"
                android:letterSpacing="0.03"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>

            <com.yy.mobile.rollingtextview.RollingTextView
                android:id="@+id/drunkAmountText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="0000"
                android:textSize="32sp"
                android:textStyle="bold"
                android:textColor="#4A90E2"
                android:fontFamily="sans-serif-light"
                app:layout_constraintTop_toBottomOf="@id/drunkText"
                app:layout_constraintStart_toStartOf="parent"/>

            <TextView
                android:id="@+id/drunkUnit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:text="ml"
                android:textSize="16sp"
                android:textColor="#808080"
                android:fontFamily="sans-serif"
                app:layout_constraintBottom_toBottomOf="@id/drunkAmountText"
                app:layout_constraintStart_toEndOf="@id/drunkAmountText"
                app:layout_constraintBaseline_toBaselineOf="@id/drunkAmountText"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <!-- Vertical Divider -->
        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#333333"
            android:layout_marginVertical="8dp"/>

        <!-- Remaining Section -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingStart="12dp">

            <TextView
                android:id="@+id/toDrinkText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Remaining"
                android:textSize="14sp"
                android:textColor="#B0B0B0"
                android:fontFamily="sans-serif"
                android:letterSpacing="0.03"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>

            <com.yy.mobile.rollingtextview.RollingTextView
                android:id="@+id/toDrinkAmountText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="0000"
                android:textSize="32sp"
                android:textStyle="bold"
                android:textColor="#E0E0E0"
                android:fontFamily="sans-serif-light"
                app:layout_constraintTop_toBottomOf="@id/toDrinkText"
                app:layout_constraintStart_toStartOf="parent"/>

            <TextView
                android:id="@+id/remainingUnit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:text="ml"
                android:textSize="16sp"
                android:textColor="#808080"
                android:fontFamily="sans-serif"
                app:layout_constraintBottom_toBottomOf="@id/toDrinkAmountText"
                app:layout_constraintStart_toEndOf="@id/toDrinkAmountText"
                app:layout_constraintBaseline_toBaselineOf="@id/toDrinkAmountText"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>